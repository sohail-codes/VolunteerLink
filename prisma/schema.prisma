generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @unique @default(autoincrement())
  uuid      String   @unique @default(uuid())
  avatar    String?
  first     String
  last      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  address   Address?
}

model Address {
  id        Int      @id @unique @default(autoincrement())
  street    String
  city      String
  state     String
  zipCode   String
  country   String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
}
